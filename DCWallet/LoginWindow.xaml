<Window x:Class="DCWallet.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DCWallet"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="450" Icon="img/dcw.ico">
    <StackPanel Orientation="Vertical" Margin="20 20 20 0">
        <Image Source="/img/dcw.ico" Width="100"></Image>
        <Label HorizontalAlignment="Center" FontSize="28">DuCoWallet</Label>
        <Label>Login</Label>
        <TextBox Name="LoginTb"/>
        <Label>Password</Label>
        <TextBox Name="PasswordTb"/>
        <Label></Label>
        <Button Content="Send" Name="LoginButton" Click="LoginButton_OnClick"/>
    </StackPanel>
</Window>