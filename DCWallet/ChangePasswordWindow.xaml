<Window x:Class="DCWallet.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DCWallet"
        mc:Ignorable="d"
        Title="Change Password" Height="450" Width="300" FontSize="14" Icon="img/dcw.ico">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20 20 20 0">
            <Label HorizontalAlignment="Center" FontSize="28">DuCoWallet</Label>
            <Label>New password</Label>
            <TextBox Name="ChangePasswordTb"></TextBox>
            <Button Click="ChangePasswordButton" Margin="0 20 0 20">Change password</Button>
        </StackPanel>
    </Grid>
</Window>
