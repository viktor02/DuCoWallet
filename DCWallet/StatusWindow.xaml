<Window x:Class="DCWallet.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DCWallet"
        mc:Ignorable="d"
        Title="Server Status" Height="450" Width="450" Icon="img/dcw.ico">
    <Grid>
        <TreeView Name="StatusPage" MinHeight="150" ScrollViewer.VerticalScrollBarVisibility="Visible"
                  Width="Auto" Margin="15 15 15 15">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </Grid>
</Window>
